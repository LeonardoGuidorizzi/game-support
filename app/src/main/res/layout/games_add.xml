<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="0dp"
        android:layout_height="98dp"
        android:background="@drawable/ic_wave_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            tools:layout_editor_absoluteY="16dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Add your game"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.18"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editTextTextPasswordNewpassword2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="What is the game?"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="283dp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game Detail"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="248dp" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Have you ever completed?"
                    tools:layout_editor_absoluteX="123dp"
                    tools:layout_editor_absoluteY="571dp" />

                <EditText
                    android:id="@+id/editTextTextPasswordNewpassword3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="What is the description?"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="359dp" />

                <EditText
                    android:id="@+id/editTextTextPasswordNewpassword4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="What is the Studio name?"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="435dp" />

                <EditText
                    android:id="@+id/editTextTextPasswordNewpassword5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="When it was release?"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="499dp" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textColor="@color/Gray"
                    tools:layout_editor_absoluteX="39dp"
                    tools:layout_editor_absoluteY="590dp" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="no"
                    android:textColor="@color/Gray"
                    tools:layout_editor_absoluteX="41dp"
                    tools:layout_editor_absoluteY="638dp" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="137dp"
                    android:layout_height="98dp"
                    app:srcCompat="@drawable/ic_camera"
                    tools:layout_editor_absoluteX="137dp"
                    tools:layout_editor_absoluteY="122dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="415dp"
            android:layout_height="96dp"
            android:background="@drawable/ic_wave"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>